@model FillThePool.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Associate your @ViewBag.ProviderDisplayName account.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
		<legend>Association Form</legend>
		<p>
			You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>.
			Please enter a user name for this site below and click the Confirm button to finish
			logging in.
		</p>
		<div class="form-group">
			@Html.LabelFor(m => m.UserName)
			@Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.FirstName)
			@Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.LastName)
			@Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Email)
			@Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Address)
			@Html.TextBoxFor(m => m.Address, new { placeholder = "Address" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Address2)
			@Html.TextBoxFor(m => m.Address2, new { placeholder = "Address 2" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.City)
			@Html.TextBoxFor(m => m.City, new { placeholder = "City" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.State)
			@Html.TextBoxFor(m => m.State, new { placeholder = "State" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Zip)
			@Html.TextBoxFor(m => m.Zip, new { placeholder = "Zip code" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Phone)
			@Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.MobilePhone)
			@Html.TextBoxFor(m => m.MobilePhone, new { placeholder = "Mobile Phone" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.CarrierOptions)
			@Html.DropDownListFor(m => m.MobileCarrier, new SelectList(Model.CarrierOptions, "Key", "Value", Model.MobileCarrier))
		</div>
		<div id="carrierother" class="form-group hide">
			<label for="MobileCarrier">Other</label>
			<input type="Text" id="MobileCarrier" value="" />
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Referral)
			@Html.TextBoxFor(m => m.Referral, new { placeholder = "" })
			("List a name and give that person a free lesson when you buy a package!")
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.PrivateRegistration)
			@Html.CheckBoxFor(m => m.PrivateRegistration)
		</div>
		@Html.HiddenFor(m => m.ExternalLoginData)
		<input type="submit" value="Register" />
	</fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
