@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
	<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
		<button type="submit" class="btn btn-link text-white py-2 d-none d-md-inline-block">Logout</button>
	</form>
}
else
{
	<a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Register">Register</a>
	<a class="py-2 d-none d-md-inline-block" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
