@page
@model FillThePool.Core.Areas.Admin.Pages.IndexModel
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Admin";
    ViewData["ActivePage"] = FillThePool.Core.Areas.Admin.Pages.Manage.AdminNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
	<div>
		@if (User.Claims.Any(c => c.Type == "Admin" && c.Value == "Full"))
		{
			<p>Total Purchased: @Model.LessonCreditCount</p>
			<p>Total Scheduled: @Model.ScheduledCount</p>
			<p>Total Purchased and Unscheduled: @(Model.LessonCreditCount - Model.ScheduledCount)</p>
		}
	</div>
</div>